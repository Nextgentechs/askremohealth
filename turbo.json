{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DATABASE_URL",
    "JWT_SECRET",
    "BLOB_READ_WRITE_TOKEN",
    "POSTGRES_HOST",
    "POSTGRES_URL_NO_SSL",
    "PGUSER",
    "PGHOST_UNPOOLED",
    "PGDATABASE",
    "PGPASSWORD",
    "POSTGRES_DATABASE",
    "POSTGRES_PASSWORD",
    "POSTGRES_USER",
    "PGHOST",
    "POSTGRES_URL_NON_POOLING",
    "DATABASE_URL_UNPOOLED",
    "POSTGRES_PRISMA_URL",
    "POSTGRES_URL",
    "NODE_ENV",
    "GOOGLE_MAPS_API_KEY",
    "CRON_SECRET",
    "TWILIO_API_KEY_SECRET",
    "TWILIO_AUTH_TOKEN",
    "TWILIO_ACCOUNT_SID",
    "TWILIO_API_KEY_SID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
