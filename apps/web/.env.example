# ==============================================================================
# Ask Remo Health - Environment Variables
# ==============================================================================
# 
# Copy this file to .env.local and fill in the values.
# Never commit .env.local or any file with real secrets to version control.
# 
# When adding additional environment variables, update the schema in "/src/env.js"
# 
# ==============================================================================

# ==============================================================================
# DATABASE
# ==============================================================================
# PostgreSQL connection string (use Neon, Supabase, or local instance)
DATABASE_URL="postgresql://user:password@localhost:5432/askremohealth"

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================
# JWT secret for session tokens (generate with: openssl rand -base64 32)
JWT_SECRET="your-jwt-secret-here"

# NextAuth secret (generate with: openssl rand -base64 32)
AUTH_SECRET="your-auth-secret-here"

# ==============================================================================
# CLERK (Authentication Provider)
# ==============================================================================
# Get these from https://dashboard.clerk.dev
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/auth"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/auth"

# ==============================================================================
# REDIS (Session Storage)
# ==============================================================================
# Upstash Redis connection (https://upstash.com)
REDIS_URL="https://your-redis-url.upstash.io"
REDIS_TOKEN="your-redis-token"

# ==============================================================================
# EMAIL (Resend)
# ==============================================================================
# Get from https://resend.com/api-keys
# IMPORTANT: This is a SERVER-SIDE only variable for security
RESEND_API_KEY="re_..."
FROM_EMAIL="info@askremohealth.com"
NEXT_PUBLIC_FROM_EMAIL="info@askremohealth.com"

# ==============================================================================
# FILE STORAGE (Vercel Blob)
# ==============================================================================
# Get from Vercel Dashboard -> Storage -> Blob
BLOB_READ_WRITE_TOKEN="vercel_blob_..."

# ==============================================================================
# GOOGLE MAPS
# ==============================================================================
# Get from https://console.cloud.google.com
GOOGLE_MAPS_API_KEY="AIza..."

# ==============================================================================
# TWILIO (Video Calls)
# ==============================================================================
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_API_KEY_SID="SK..."
TWILIO_API_KEY_SECRET="your-api-key-secret"

# ==============================================================================
# CRON JOBS
# ==============================================================================
# Secret for authenticating cron job requests
CRON_SECRET="your-cron-secret"

# ==============================================================================
# APPLICATION URLS
# ==============================================================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==============================================================================
# DEVELOPMENT
# ==============================================================================
# Set to development, test, or production
NODE_ENV="development"

# Skip env validation during build (useful for CI/CD)
# SKIP_ENV_VALIDATION="1"

# Git profile for dev container
GIT_USER_EMAIL=
GIT_USER_NAME=
